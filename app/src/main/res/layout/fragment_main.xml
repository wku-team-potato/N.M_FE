<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFC476">


    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#F9A332"
        android:padding="20dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent">

        <!-- 로고 텍스트뷰 (Logo TextView) -->
        <TextView
            android:id="@+id/logoTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BodyFit"
            android:textSize="36sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"/>
    </LinearLayout>

    <!-- 사용자 정보 텍스트뷰 (User Information TextView) -->
        <TextView
            android:id="@+id/userInfoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="left"
            android:paddingTop="10dp"
            android:text="발전하는 User님\n000일째"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.058"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/topBar" />

    <Button
        android:id="@+id/weightButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="오늘의 체중"
        android:backgroundTint="#FF6666"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/userInfoTextView"
        app:layout_constraintStart_toStartOf="right_column"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="253dp"
        android:text="식단 추가"
        android:backgroundTint="#FF9966"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/userInfoTextView"
        app:layout_constraintStart_toStartOf="right_column"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="68dp"/>

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="301dp"
        android:text="지금까지 달려온 길"
        android:backgroundTint="#66CC66"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/userInfoTextView"
        app:layout_constraintStart_toStartOf="right_column"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="120dp"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="349dp"
        android:text="함께 하는 친구들"
        android:backgroundTint="#6699FF"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/userInfoTextView"
        app:layout_constraintStart_toStartOf="right_column"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="172dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오늘 하루 영양표"
        android:textColor="#000000"
        android:textSize="28sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="232dp"
        app:layout_constraintTop_toBottomOf="@id/userInfoTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>




</androidx.constraintlayout.widget.ConstraintLayout>


