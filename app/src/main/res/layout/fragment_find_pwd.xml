
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent" android:background="#F9A332" android:padding="16dp">
    <!--  BodyFit 텍스트  -->
    <TextView android:id="@+id/bodyfit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="BodyFlt" android:textSize="36sp" android:textStyle="bold" android:textColor="#000000" android:gravity="center" app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="40dp"/>
    <!--  흰색 박스 (CardView)  -->
    <androidx.cardview.widget.CardView
        android:id="@+id/white_box"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:backgroundTint="#FFFFFF"
        android:elevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/bodyfit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="121dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">
        <!--  흰색 박스 안의 내용: 이메일, 버튼 그룹  -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
            <!--  이메일 입력 필드  -->
            <EditText android:id="@+id/email" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Email" android:text="Value" android:layout_marginBottom="16dp" android:inputType="textEmailAddress"/>
            <!--  버튼 그룹  -->
            <LinearLayout android:id="@+id/button_group" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center" android:weightSum="2">
                <!--  취소 버튼  -->
                <Button android:id="@+id/cancel_button" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="Cancel" android:textColor="#FFFFFF" android:backgroundTint="#B0BEC5" android:layout_marginEnd="8dp"/>
                <!--  비밀번호 재설정 버튼  -->
                <Button android:id="@+id/reset_password_button" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="Reset Password" android:textColor="#FFFFFF" android:backgroundTint="#000000"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>